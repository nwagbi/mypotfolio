{
  "manifest_version": 2,
  "name": "Tabs to Portfolio",
  "version": "1.0",
  "description": "Save selected tabs as thumbnails in an HTML file.",
  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Tabs to Portfolio",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true  // opens in a new tab rather than a small panel (better for complex settings)
  },
  "web_accessible_resources": [
    "modify/modify.html"
  ]
}